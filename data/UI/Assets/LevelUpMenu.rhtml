<rml>
  <head>
    <title>Level Up Menu</title>
    <link type="text/rcss" href="engine:/data/ui/rml.rcss" />
    <link type="text/rcss" href="CommonMenu.rcss" />
    <link type="text/rcss" href="LevelUpMenu.rcss" />
  </head>

  <body id="body" class="theme-dark">
    <div class="menu-container menu-container--centered">
      
      <!-- Level Up Title -->
      <header class="menu-header menu-header--large">
        <h1 id="levelup_title" class="menu-title menu-title--large">LEVEL UP!</h1>
        <div class="menu-subtitle menu-subtitle--large">Choose your upgrade</div>
      </header>

      <!-- Card Selection Area -->
      <nav class="menu-nav">
        <div class="card-container">
          <div id="card1" class="upgrade-card">
            <div class="card-header">
              <h3 id="card1_title" class="card-title">Upgrade 1</h3>
            </div>
            <div class="card-body">
              <p id="card1_description" class="card-description">Description for upgrade 1</p>
            </div>
          </div>
          
          <div id="card2" class="upgrade-card">
            <div class="card-header">
              <h3 id="card2_title" class="card-title">Upgrade 2</h3>
            </div>
            <div class="card-body">
              <p id="card2_description" class="card-description">Description for upgrade 2</p>
            </div>
          </div>
          
          <div id="card3" class="upgrade-card">
            <div class="card-header">
              <h3 id="card3_title" class="card-title">Upgrade 3</h3>
            </div>
            <div class="card-body">
              <p id="card3_description" class="card-description">Description for upgrade 3</p>
            </div>
          </div>
        </div>
      </nav>

      <!-- Footer Info -->
      <footer class="menu-footer">
        <div class="version-info">Select an upgrade to continue</div>
      </footer>

    </div>
  </body>
</rml>
