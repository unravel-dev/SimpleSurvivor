<rml>
  <head>
    <title>Main Menu</title>
    <link type="text/rcss" href="engine:/data/ui/rml.rcss" />
    <link type="text/rcss" href="CommonMenu.rcss" />
    <link type="text/rcss" href="MainMenu.rcss" />
  </head>


  <body id="body" class="theme-dark">
    <div class="menu-container menu-container--centered">
      
      <!-- Game Title -->
      <header class="menu-header menu-header--large">
        <h1 id="main_title" class="menu-title menu-title--large">Game Title</h1>
        <div class="menu-subtitle menu-subtitle--large">Welcome to the Adventure</div>
      </header>

      <!-- Main Menu Buttons -->
      <nav class="menu-nav">
        <div class="menu-buttons">
          <button id="play_btn" class="menu-btn menu-btn--large menu-btn-primary">
            <span class="btn-icon"></span>
            <span class="btn-text">Play</span>
          </button>
          
          <button id="options_btn" class="menu-btn menu-btn--large menu-btn-secondary">
            <span class="btn-icon"></span>
            <span class="btn-text">Settings</span>
          </button>
          
          <button id="exit_btn" class="menu-btn menu-btn--large menu-btn-danger">
            <span class="btn-icon"></span>
            <span class="btn-text">Exit</span>
          </button>
        </div>
      </nav>

      <!-- Footer Info -->
      <footer class="menu-footer">
        <div class="version-info">Version 1.0.0</div>
        <div class="copyright">Â© 2025 Your Game Studio</div>
      </footer>

    </div>
  </body>
</rml>
