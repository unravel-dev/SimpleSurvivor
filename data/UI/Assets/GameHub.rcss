/* ---------- Game Hub HUD Styles ---------- */
/* In-game HUD for health and experience bars using only RmlUi supported properties */

/* Override theme background for in-game HUD - no dimming */
body.theme-dark {
  background-color: transparent;
}

/* Game Timer (using exact menu structure) */
.timer-container {
  z-index: 1000; /* Ensure it's above other elements */
  /* Override default menu-container height to not take full screen */
  height: auto;
  /* Reduce padding for tighter top positioning */
  padding: 20px 32px 0 32px;
  /* Remove the menu background dimming for in-game HUD */
  background-color: transparent;
}

.timer-title {
  background-color: rgba(0, 0, 0, 200);
  border: 2px rgba(255, 255, 255, 180);
  border-radius: 20px;
  padding: 8px 16px;
  display: inline-block;
  font-size: 18px; /* Override the large title size */
}

.timer-icon {
  color: #ffcc00;
  margin-right: 8px;
}

.timer-text {
  color: white;
  /*font-family: monospace;*/
}

/* Main HUD Container */
.hud-container {
  position: absolute;
  top: 30px; /* Back to original position since timer is now fixed */
  left: 30px;
  width: 300px;
}

/* Stat Bar Container */
.stat-bar-container {
  margin-bottom: 15px;
  padding: 8px;
  background-color: rgba(0, 0, 0, 178);
  border: 2px rgba(255, 255, 255, 102);
  border-radius: 8px;
}

/* Stat Bar Label */
.stat-bar-label {
  font-size: 16px;
  font-weight: bold;
  color: white;
  margin-bottom: 5px;
  text-align: left;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* Stat Value Display */
.stat-value {
  font-size: 14px;
  font-weight: normal;
  color: rgba(255, 255, 255, 204);
  margin-left: auto;
}

/* Stat Icons */
.health-icon {
  color: #ff3333;
}

.experience-icon {
  color: #ffcc00;
}

.stat-text {
  margin-left: 8px;
}

/* Progress Bar Base Styles - Much more visible */
.stat-progress {
  width: 280px;
  height: 24px;
  border: 3px white;
  border-radius: 12px;
  background-color: rgba(40, 40, 40, 230);
  
}

/* Health Progress Bar - Bright red fill with dark background */
.health-progress {
  background-color: rgba(60, 20, 20, 230);
  border-color: rgba(255, 80, 80, 255);
}

.health-progress fill {
  background-color: rgb(255, 60, 60);
}

/* Experience Progress Bar - Bright cyan fill with dark background */
.experience-progress {
  background-color: rgba(20, 50, 60, 230);
  border-color: rgba(50, 200, 255, 255);
}

.experience-progress fill {
  background-color: rgb(0, 200, 255);
}

/* Low Health Warning - Make it flash with brighter colors */
.health-progress.low-health {
  background-color: rgba(80, 0, 0, 255);
  border-color: rgba(255, 30, 30, 255);
  filter: brightness(150%);
}

.health-progress.low-health fill {
  background-color: rgb(255, 30, 30);
}
